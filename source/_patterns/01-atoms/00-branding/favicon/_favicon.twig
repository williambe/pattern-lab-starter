
{# directory -  the current theme path without domain #}
{%  set path = directory ~ '/favicons' %}
{%  set color = '#f42534' %}
{%  set themecolor = '#ffffff' %}
{%  set mask_icon_color = color %}
{%  set tile_color = themecolor %}
{%  set theme_color = themecolor %}

<link rel="apple-touch-icon" sizes="180x180" href="/{{ path }}/apple-touch-icon.png">
<link rel="icon" type="image/png" href="/{{ path }}/favicon-32x32.png" sizes="32x32">
<link rel="icon" type="image/png" href="/{{ path }}/favicon-16x16.png" sizes="16x16">
<link rel="manifest" href="/{{ path }}/manifest.json">
<link rel="mask-icon" href="/{{ path }}/safari-pinned-tab.svg" color="#f42534">
<link rel="shortcut icon" href="/{{ path }}/favicon.ico">
<meta name="msapplication-config" content="/{{ path }}/browserconfig.xml">
<meta name="theme-color" content="#ffffff">
